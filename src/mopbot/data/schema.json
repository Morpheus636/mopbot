{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Discord Guild Role Permissions Config",
  "type": "object",
  "properties": {
    "guild_id": {
      "type": "integer",
      "minimum": 0,
      "description": "Discord guild ID as an integer."
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role_ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0,
              "description": "Discord role ID as an integer."
            },
            "minItems": 1
          },
          "permissions": {
            "type": "object",
            "description": "Discord permission flags. Each key corresponds to a Discord permission name with a boolean value.",
            "properties": {
              "create_instant_invite": { "type": "boolean" },
              "kick_members": { "type": "boolean" },
              "ban_members": { "type": "boolean" },
              "administrator": { "type": "boolean" },
              "manage_channels": { "type": "boolean" },
              "manage_guild": { "type": "boolean" },
              "add_reactions": { "type": "boolean" },
              "view_audit_log": { "type": "boolean" },
              "priority_speaker": { "type": "boolean" },
              "stream": { "type": "boolean" },
              "view_channel": { "type": "boolean" },
              "send_messages": { "type": "boolean" },
              "send_tts_messages": { "type": "boolean" },
              "manage_messages": { "type": "boolean" },
              "embed_links": { "type": "boolean" },
              "attach_files": { "type": "boolean" },
              "read_message_history": { "type": "boolean" },
              "mention_everyone": { "type": "boolean" },
              "use_external_emojis": { "type": "boolean" },
              "view_guild_insights": { "type": "boolean" },
              "connect": { "type": "boolean" },
              "speak": { "type": "boolean" },
              "mute_members": { "type": "boolean" },
              "deafen_members": { "type": "boolean" },
              "move_members": { "type": "boolean" },
              "use_vad": { "type": "boolean" },
              "change_nickname": { "type": "boolean" },
              "manage_nicknames": { "type": "boolean" },
              "manage_roles": { "type": "boolean" },
              "manage_webhooks": { "type": "boolean" },
              "manage_emojis_and_stickers": { "type": "boolean" },
              "use_application_commands": { "type": "boolean" },
              "request_to_speak": { "type": "boolean" },
              "manage_events": { "type": "boolean" },
              "manage_threads": { "type": "boolean" },
              "create_public_threads": { "type": "boolean" },
              "create_private_threads": { "type": "boolean" },
              "use_external_stickers": { "type": "boolean" },
              "send_messages_in_threads": { "type": "boolean" },
              "use_embedded_activities": { "type": "boolean" },
              "moderate_members": { "type": "boolean" },
              "view_creator_monetization_analytics": { "type": "boolean" },
              "use_soundboard": { "type": "boolean" },
              "create_expressions": { "type": "boolean" },
              "use_external_sounds": { "type": "boolean" },
              "send_voice_messages": { "type": "boolean" },
              "send_polls": { "type": "boolean" },
              "use_external_apps": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        "required": ["role_ids", "permissions"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["guild_id", "roles"],
  "additionalProperties": false
}
